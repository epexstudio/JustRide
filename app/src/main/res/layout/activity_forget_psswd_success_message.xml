<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="20dp"
    tools:context=".ForgetPsswdSuccessMessage">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-18dp"
            android:fontFamily="@font/alef_bold"
            android:gravity="center"
            android:text="Password\nUpdated"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:includeFontPadding="false"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp" />
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/ic_confirmed"
            android:layout_margin="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Password Has Been Updated"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textAlignment="center"
            android:gravity="center" />
        <Button
            android:id="@+id/rst_login_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:background="@color/yellow"
            android:layout_marginTop="20dp"/>


    </LinearLayout>

</LinearLayout>